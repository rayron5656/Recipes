@model IEnumerable<Recipes.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.recipe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td >
                <p hidden="{{s}}">@Html.DisplayFor(modelItem => item.recipe)</p>
          
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.Id">Watch Recipe</a> |
               >
            </td>
        </tr>
}
    </tbody>
</table>
